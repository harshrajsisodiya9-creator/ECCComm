spring.jpa.database-platform=org.hibernate.dialect.MySQLDialect               // jpa platform used = hibernate
spring.datasource.url = jdbc:mysql://localhost:3306/prod                      // MySql currently running on port 3306 and a database specifically created for the products of this project named prod
spring.datasource.driverClassName = com.mysql.cj.jdbc.Driver                  // mysql driver
spring.datasource.username = root                      // by default by mysql username = root
spring.datasource.password = blah123                  // password of mysql server

mysqld for starting the server cd "C:\Program Files\MySQL\MySQL Server 8.3\bin"
open another cmd for working on the application cd "C:\Program Files\MySQL\MySQL Server 8.3\bin" then mysql -u root -p enter password
SHOW DATABASE; for the databases
CREATE DATABASE prod; for creation of a new database

